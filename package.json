{
  "name": "@veterancrowd/client-visa",
  "version": "0.1.10",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karmaniverous/client-visa"
  },
  "author": "Jason G. Williscroft",
  "bugs": {
    "url": "https://github.com/karmaniverous/client-visa/issues"
  },
  "description": "A generalized client for selected portions of the Visa Offers Program API.",
  "homepage": "https://github.com/karmaniverous/client-visa#readme",
  "keywords": [],
  "license": "BSD-3-Clause",
  "dependencies": {
    "axios": "^1.6.7",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "http-errors": "^2.0.0",
    "lodash": "^4.17.21",
    "nanoid": "^5.0.5",
    "node-jose": "^2.2.0",
    "openapi-client-axios": "^7.5.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/plugin-syntax-import-assertions": "^7.23.3",
    "@babel/preset-env": "^7.23.9",
    "@babel/register": "^7.23.7",
    "@karmaniverous/edge-logger": "^1.3.7",
    "@karmaniverous/get-dotenv": "^3.1.17",
    "@types/node": "^20.11.17",
    "@veterancrowd/aws-cli": "^4.6.2",
    "auto-changelog": "^2.4.0",
    "babel-plugin-lodash": "^3.3.4",
    "chai": "^5.1.0",
    "chai-match-pattern": "^1.3.0",
    "concat-md": "^0.5.1",
    "creditcard-generator": "^0.0.7",
    "crlf": "^1.1.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.0.6",
    "eslint-plugin-mocha": "^10.2.0",
    "jsdoc-to-markdown": "^8.0.1",
    "lefthook": "^1.6.1",
    "mocha": "^10.3.0",
    "node-random-name": "^1.0.1",
    "prettier": "^3.2.5",
    "release-it": "^17.0.3"
  },
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./dist/default/lib/index.js"
    }
  },
  "main": "./lib/index.js",
  "mocha": {
    "exclude": [
      "./dist/**",
      "./node_modules/**"
    ],
    "file": "./test/setup.js",
    "require": [
      "@babel/register",
      "chai-match-pattern"
    ],
    "spec": "./**/*.test.!(*.*)",
    "timeout": 60000
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "requireBranch": "dev",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:init": [
        "nr lint",
        "nr test",
        "nr doc",
        "nr build"
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch dev"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "scripts": {
    "build": "babel lib -d dist/default/lib --delete-dir-on-start --config-file ./dist/default/.babelrc",
    "doc": "jsdoc2md -c doc/jsdoc.config.json -f lib/**/*.* -t doc/api-template.hbs > doc/2-api.jsdoc2.md && concat-md doc --hide-anchor-links > README.md && crlf --set=CRLF README.md",
    "lint": "eslint lib/**",
    "release": "vc -c \"release-it\"",
    "test": "vc -c \"mocha\""
  },
  "type": "module"
}
